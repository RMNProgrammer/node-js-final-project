<html>

<head>
    <%- include('layout/head'); -%>
        <link href="/assets/css/signin.css" rel="stylesheet">
</head>

<body>
    <div class="container">
        <form action="/forget" method="POST" class="form-signin" >
            <a href="/" class="logo title d-flex"><h1 class="logo">Online Shop</h1></a>                
            <% for ( const key in flash ) { %>
                <div class="alert alert-<%= key === 'error' ? 'danger' : key %> center" role="alert">
                    <%= flash[key] %>
                </div>
            <% } %>               
            <input name="email" type="email" id="inputEmail" class="form-control" placeholder="Email address" <% if(disabled) { %> disabled <% } %> 
                autocomplete="off" required autofocus 
                style="background-image: url(&quot;data:image/png;base64,&quot;); background-repeat: no-repeat; background-attachment: scroll; background-size: 16px 18px; background-position: 98% 50%; cursor: auto;">
            <br/>   
            <% errors.forEach(error => { %>
                <div class="alert alert-danger center" role="alert">
                    <%= error.path %> - <%= error.msg %>
                </div>
            <% }) %>
            <button class="btn btn-lg btn-primary" type="submit" <% if(disabled) { %> disabled <% } %> >Forget Password</button>
            <a href="/sign-up">Don't have an account?</a>
            <br />
            <a href="/login">Already have an account?</a>
            <p class="mt-5 mb-3 text-muted">Â© 2024</p>
        </form>
    </div>
</body>

</html>