<html>

<head>
    <%- include('layout/head'); -%>
        <link href="/assets/css/signin.css" rel="stylesheet">
</head>

<body>
    <body data-new-gr-c-s-check-loaded="14.1026.0" data-gr-ext-installed="">
        <div class="container">
            <form class="form-signin" action="/reset?token=<%= token %> " method="POST">
                <a href="/" class="logo title d-flex"><h1 class="logo">Online Shop</h1></a>
                <% for (const key in flash) { %>
                    <div class="alert alert-<%= key === 'error' ? 'danger' : key %> center" role="alert">
                        <%= flash[key] %>
                    </div>
                    <br />
                <% } %>
                <h3 class="title center">Change your password</h3>
                <br />
                <input name="password" type="password" id="inputPassword" class="form-control"
                    placeholder="New Password" required="" autocomplete="off" <% if(disabled) { %> disabled <% } %>
                    style="background-image: url(&quot;data:image/png;base64,&quot;); background-repeat: no-repeat; background-attachment: scroll; background-size: 16px 18px; background-position: 98% 50%; cursor: auto;">
                <% errors.forEach(error=> { %>
                    <div class="alert alert-danger" role="alert">
                        <%= error.path %> - <%= error.msg %>
                    </div>
                <% }) %>
                <br />
                <button class="btn btn-lg btn-primary" type="submit" <% if(disabled) { %> disabled <% } %> >Reset Password</button>
                <a href="/login">Login to your account</a>
                <p class="mt-5 mb-3 text-muted">Â© 2024</p>
            </form>
        </div>
    </body>
</body>

</html>