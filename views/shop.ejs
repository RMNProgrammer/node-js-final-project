<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('layout/head') -%>
</head>

<body>

  <%- include('layout/header') -%>

  <main class="main">

    <!-- Page Title -->
    <div class="page-title" data-aos="fade">
      <div class="heading">
        <div class="container">
          <div class="row d-flex justify-content-center text-center">
            <div class="col-lg-8">
              <h1>Shop</h1>
              <p class="mb-0">Click on the title of the desired item to view its products : </p>
            </div>
          </div>
        </div>
      </div>
      <nav class="breadcrumbs">
        <div class="container">
          <ol>
            <li><a href="/">Home</a></li>
            <li class="current">Shop</li>
          </ol>
        </div>
      </nav>
    </div><!-- End Page Title -->

    <!-- Courses List Section -->
    <section id="courses-list" class="section shop-list">

      <div class="container">

        <div class="cards">
          <% categories.forEach(category => { %>
            <div class="card" data-aos="zoom-in" data-aos-delay="200">
              <div>
                <div class="zoom">
                  <img src=<%= category.image %> alt="<%= category.name %>-category">
                </div>
                <div class="card-content">
                  <div class="d-flex justify-content-between align-items-center mb-3">
                    <h3><a href="/category/<%= category.slug %>"><%= category.name %></a></h3>
                    <p class="counter">has <%= category.count %> products</p>
                  </div>
                  <p class="description"><%= category.description %></p>
                </div>
              </div>
            </div> <!-- End Course Item-->
          <% }) %>

        </div>

      </div>

    </section><!-- /Courses List Section -->

  </main>

  <!-- footer -->
  <%- include('layout/footer') -%>

  <!-- Scroll Top -->
  <a href="#" id="scroll-top" class="scroll-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>

  <!-- Preloader -->
  <div id="preloader"></div>

  <!-- scripts -->
  <%- include('layout/scripts-connector') -%>

</body>

</html>